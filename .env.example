# Trello API Configuration
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_TOKEN=your_trello_token_here
TRELLO_BOARD_ID=your_trello_board_id_here

# Optional: Review-week configuration
# If provided, cards marked complete can be moved to this Done list
DONE_LIST_ID=
# Or specify by name (case-insensitive) to auto-resolve on the board
DONE_LIST_NAME=Done
# Comma-separated list names to include when scanning (default: Doing, Review)
# Example: Doing,Review,Code Review,In Review
INCLUDE_LIST_NAMES=

# Lists used for PR state sync (either provide ID directly or resolve by name on TRELLO_BOARD_ID)
REVIEW_LIST_ID=
REVIEW_LIST_NAME=Ready for review & testing (developers)
REJECTED_LIST_ID=
REJECTED_LIST_NAME=Rejected

# Staging URL Replacement
# If set, all localhost:3000 and localhost:8080 links in PR descriptions
# will be replaced with this base URL before posting to Trello.
# Example: https://ur-staging.example.com
UR_STAGING_BASE_URL=

# Optional: Due-Today updater configuration
# Provide either TRELLO_DOING_LIST_ID or TRELLO_BOARD_ID (+ DOING_LIST_NAME) so the script can find your Doing list
TRELLO_DOING_LIST_ID=your_doing_list_id
TRELLO_BOARD_ID=your_board_id
DOING_LIST_NAME=Doing

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Optional: Mattermost webhook for notifications
MATTERMOST_WEBHOOK_URL=your_mattermost_webhook_url_here


# OpenRouter for LLM generation (used by trello-enhance CLI)
OPENROUTER_API_KEY=your_openrouter_api_key_here

